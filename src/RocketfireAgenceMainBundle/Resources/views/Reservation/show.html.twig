{% extends 'base.html.twig' %}

{% block body %}
<h1>Reservation</h1>

<table class="table table-hover table-striped">
    <tbody>
        <tr>
            <th>Datereservation</th>
            <td>{% if reservation.dateReservation %}{{ reservation.dateReservation|date('Y-m-d') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Numero</th>
            <td>{{ reservation.numero }}</td>
        </tr>
        <tr>
            <th>Etat</th>
            <td>{{ reservation.etat }}</td>
        </tr>
        <tr>
            <th>Vol</th>
            <td>{{ reservation.idVol }}</td>
        </tr>
        <tr>
            <th>Client</th>
            <td>{{ reservation.idAdd }}</td>
        </tr>
        <tr>
            <th>Passager</th>
            <td>{{ reservation.idPassager }}</td>
        </tr>
    </tbody>
</table>
<div class="btn-group btn-group-justified" role="group" aria-label="...">
    <div class="btn-group" role="group">
        <a href="{{ path('reservation_index') }}">
            <button type="button" class="btn btn-default">
                Retour
            </button>
        </a>
    </div>
    <div class="btn-group" role="group">
        <a href="{{ path('reservation_edit', { 'id': reservation.idResa }) }}">
            <button type="button" class="btn btn-warning">Editer</button>
        </a>
    </div>
    <div class="btn-group" role="group">
        {{ form_start(delete_form) }}
        <input type="submit" class="btn btn-danger" value="Delete">
        {{ form_end(delete_form) }}
    </div>
</div>
{% endblock %}
