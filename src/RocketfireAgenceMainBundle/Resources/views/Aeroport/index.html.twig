{% extends 'base.html.twig' %}

{% block body %}
<h1>Aeroports list</h1>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Ville</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for aeroport in aeroports %}
        <tr>
            <td><a href="{{ path('aeroport_show', { 'id': aeroport.id }) }}">{{ aeroport.id }}</a></td>
            <td>{{ aeroport.nom }}</td>
            <td>
                <ul>
                    {% for ville in aeroport.villes %}
                    <li>{{ ville.nom }}</li>
                    {% endfor %}
                </ul>
            </td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('aeroport_show', { 'id': aeroport.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('aeroport_edit', { 'id': aeroport.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('aeroport_new') }}">Create a new aeroport</a>
    </li>
</ul>
{% endblock %}
