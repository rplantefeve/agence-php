{% extends 'base.html.twig' %}

{% block body %}
<h1>Aeroports list</h1>

<a href="{{ path('aeroport_new') }}">
    <button type="button" class="btn btn-info">
        Create a new aeroport
    </button>
</a>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Idaero</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for aeroport in aeroports %}
        <tr>
            <td><a href="{{ path('aeroport_show', { 'id': aeroport.idAero }) }}">{{ aeroport.idAero }}</a></td>
            <td>{{ aeroport.nom }}</td>
            <td>
                <a href="{{ path('aeroport_show', { 'id': aeroport.idAero }) }}">
                    <button type="button" class="btn btn-default" aria-label="Left Align">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </button>
                </a>
                <a href="{{ path('aeroport_edit', { 'id': aeroport.idAero }) }}">
                    <button type="button" class="btn btn-default" aria-label="Left Align">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>


{% endblock %}
