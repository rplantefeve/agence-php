{% extends 'base.html.twig' %}

{% block body %}
    <h1>Escale</h1>

    <table class="table table-hover table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ escale.idEscale }}</td>
            </tr>
            <tr>
                <th>Datedepart</th>
                <td>{% if escale.dateDepartEscale %}{{ escale.dateDepartEscale|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datearrivee</th>
                <td>{% if escale.dateArriveeEscale %}{{ escale.dateArriveeEscale|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Heuredepart</th>
                <td>{% if escale.heureDepartEscale %}{{ escale.heureDepartEscale|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Heurearrivee</th>
                <td>{% if escale.heureArriveeEscale %}{{ escale.heureArriveeEscale|date('H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-group btn-group-justified" role="group" aria-label="...">
        <div class="btn-group" role="group">
            <a href="{{ path('escale_index') }}">
                <button type="button" class="btn btn-default">
                    Retour
                </button>
            </a>
        </div>
        <div class="btn-group" role="group">
            <a href="{{ path('escale_edit', { 'id': escale.idEscale }) }}">
                <button type="button" class="btn btn-warning">Editer</button>
            </a>
        </div>
        <div class="btn-group" role="group">
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="Delete">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
