
<table class="table table-hover table-condensed col-sm-11 col-sm-offset-1 escales-in-vol">
    <h3>Escales</h3>
    <thead>
        <tr>
            <th>Ville</th>
            <th>Aeroport</th>
            <th>Datedepart</th>
            <th>Datearrivee</th>
            <th>Heuredepart</th>
            <th>Heurearrivee</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>

            {% for villeAeroport in villes_aeroports if escale.idAeroport == villeAeroport.idAeroport %}
            <td>{% if villeAeroport.idVille %}{{ villeAeroport.idVille }}{% endif %}</td>
            <td>{% if escale.idAeroport %}{{ escale.idAeroport }}{% endif %}</td>
            {% endfor %}

            <td>{% if escale.dateDepartEscale %}{{ escale.dateDepartEscale|date('Y-m-d') }}{% endif %}</td>
            <td>{% if escale.dateArriveeEscale %}{{ escale.dateArriveeEscale|date('Y-m-d') }}{% endif %}</td>
            <td>{% if escale.heureDepartEscale %}{{ escale.heureDepartEscale|date('H:i:s') }}{% endif %}</td>
            <td>{% if escale.heureArriveeEscale %}{{ escale.heureArriveeEscale|date('H:i:s') }}{% endif %}</td>
            <td>
                <a href="{{ path('escale_show', { 'id': escale.idEscale }) }}">
                    <button type="button" class="btn btn-default" aria-label="Left Align">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </button>
                </a>
                <a href="{{ path('escale_edit', { 'id': escale.idEscale }) }}">
                    <button type="button" class="btn btn-default" aria-label="Left Align">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                </a>
            </td>
        </tr>
    </tbody>

</table>
