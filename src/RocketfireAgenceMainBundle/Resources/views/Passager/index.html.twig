{% extends 'base.html.twig' %}

{% block body %}
<h1>Passagers list</h1>
<a href="{{ path('passager_new') }}">
    <button type="button" class="btn btn-info">
        Create a new reservation
    </button>
</a>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Idpassager</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for passager in passagers %}
        <tr>
            <td><a href="{{ path('passager_show', { 'id': passager.idPassager }) }}">{{ passager.idPassager }}</a></td>
            <td>{{ passager.nom }}</td>
            <td>{{ passager.prenom }}</td>
            <td>
                <a href="{{ path('passager_show', { 'id': passager.idPassager }) }}">
                    <button type="button" class="btn btn-default" aria-label="Left Align">
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </button>
                </a>
                <a href="{{ path('passager_edit', { 'id': passager.idPassager }) }}">
                    <button type="button" class="btn btn-default" aria-label="Left Align">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
