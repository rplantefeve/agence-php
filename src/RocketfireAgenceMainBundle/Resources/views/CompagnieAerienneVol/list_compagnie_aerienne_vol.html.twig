{% extends "::base.html.twig" %}

{% block title %}RocketfireAgenceMainBundle:CompagnieAerienneVol:listCompagnieAerienneVol{% endblock %}

{% block body %}

    <h1>Liste des vols de compagnie aérienne</h1>
    
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('CompagnieAerienneVol_add') }}">
        <button type="button" class="btn btn-info">
            Créer un nouveau vol de compagnie aerienne
        </button>
    </a>
     {% endif %}
    
    <table class="table table-hover table-striped">
        <tr>
            <th>Numero</th>
            <th>Ouvert</th>
            <th>Compagnie aérienne</th>
            <th>Actions</th>
        </tr>
        {% for compagnieAerienneVol in compagnieAerienneVols %}
            {# boucle de construction de la liste des compagnieAerienneVols #}
            <tr>
                <td>{{ compagnieAerienneVol.numero }}</td>
                <td>{{ compagnieAerienneVol.ouvert }}</td>
                <td>{{ compagnieAerienneVol.idCompagnie }}</td>        
                <td>
                    <a href="{{ path('CompagnieAerienneVol_show', { 'id': compagnieAerienneVol.id }) }}">
                        <button type="submit" class="btn btn-default" aria-label="Left Align">
                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                        </button>
                    </a>

                    <a href="{{ path('CompagnieAerienneVol_edit', { 'id': compagnieAerienneVol.id }) }}">
                        <button type="submit" class="btn btn-default" aria-label="Left Align">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </button>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>

    {% for flashMessage in app.session.flashBag.get('notice') %}
        <p>
            {{ flashMessage }}
        </p>
    {% endfor %}

{% endblock %}
