{% extends "::base.html.twig" %}

{% block title %}RocketfireAgenceMainBundle:CompagnieAerienne:listCompagnieAerienne{% endblock %}

{% block body %}
    <h1>Liste des compagnies aériennes</h1>
    <form action='{{ path('CompagnieAerienne_add') }}'>
        <button class="btn btn-info" type="submit">Créer une compagnie A&#233;rienne</button>
    </form>

    <table class="table table-hover table-striped">
        <tr>
            <th>Identifiant</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        {% for compagnie in compagnieAeriennes %}
            {# boucle de construction de la liste des compagnies #}
            <tr>
                <td>{{ compagnie.id }} </td>
                <td>{{ compagnie.nom }}</td>
                <td>
                    <a href="{{ path('CompagnieAerienne_show', { 'id': compagnie.id }) }}">
                        <button type="button" class="btn btn-default" aria-label="Left Align">
                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                        </button>
                    </a>
                    <a href="{{ path('CompagnieAerienne_edit', { 'id': compagnie.id }) }}">
                        <button type="submit" class="btn btn-default"label="left Align">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </button>
                    </form>
                </td>
            </tr>
        {% endfor %}
    </table>
    {% for flashMessage in app.session.flashBag.get('notice') %}
        <p>
            {{ flashMessage }}
        </p>
    {% endfor %}
{% endblock %}
